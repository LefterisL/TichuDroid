<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ntamakoupa.tichudroid" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayersList"
            android:label="@string/title_activity_players" >
        </activity>
        <activity
            android:name=".MatchesList"
            android:label="@string/title_activity_matches" >
        </activity>
        <activity
            android:name=".NewMatch"
            android:label="@string/title_activity_new_match" >
        </activity>
        <activity
            android:name=".NewPlayer"
            android:label="@string/title_activity_new_player"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".PlayerProfile"
            android:label="Player Profile" >
        </activity>
        <activity
            android:name=".PickPlayer"
            android:label="@string/title_activity_pick_player" >
        </activity>
        <activity
            android:name=".MatchProfile"
            android:label="@string/title_activity_match_overview" >
        </activity>
        <activity
            android:name=".NewSet"
            android:label="@string/title_activity_new_set" >
        </activity>
        <activity
            android:name=".SetsList"
            android:label="@string/title_activity_sets_list" >
        </activity>
        <activity
            android:name=".Feedback"
            android:label="@string/title_activity_feedback" >
        </activity>
    </application>

</manifest>
