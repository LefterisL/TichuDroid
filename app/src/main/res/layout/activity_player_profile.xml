<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ntamakoupa.tichudroid.PlayerProfile"
    android:id="@+id/ext"
    android:focusable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/playerName"
        android:textColor="#898989"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/avatarView"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/boy"
        android:layout_below="@+id/playerName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Avatar"
        android:id="@+id/avatarText"
        android:layout_alignRight="@+id/avatarView"
        android:layout_alignEnd="@+id/avatarView"
        android:layout_below="@+id/avatarView"
        android:layout_alignLeft="@+id/avatarView"
        android:layout_alignStart="@+id/avatarView"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:background="#c43334"
        android:gravity="center_horizontal"
        android:textSize="23sp"
        android:textIsSelectable="false"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stats"
        android:id="@+id/stats"
        android:layout_below="@+id/avatarText"
        android:layout_centerHorizontal="true"
        android:textColor="#898989"
        android:textSize="25sp"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="Wins Loses"
        android:id="@+id/wins"
        android:textColor="#ffffff"
        android:background="#018399"
        android:gravity="center"
        android:layout_below="@+id/stats"
        android:layout_alignLeft="@+id/avatarText"
        android:layout_alignStart="@+id/avatarText"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="Tichu"
        android:id="@+id/tichu"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#c43233"
        android:layout_alignTop="@+id/wins"
        android:layout_alignRight="@+id/avatarText"
        android:layout_alignEnd="@+id/avatarText"
        android:padding="5dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="Grand"
        android:textColor="#ffffff"
        android:gravity="center"
        android:id="@+id/grand"
        android:layout_toEndOf="@+id/wins"
        android:background="#ffca10"
        android:layout_alignTop="@+id/tichu"
        android:layout_alignLeft="@+id/stats"
        android:layout_alignStart="@+id/stats"
        android:padding="5dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0/0"
        android:id="@+id/wins_txt"
        android:layout_marginTop="34dp"
        android:textSize="20dp"
        android:layout_below="@+id/wins"
        android:layout_alignLeft="@+id/wins"
        android:layout_alignStart="@+id/wins"
        android:layout_alignRight="@+id/wins"
        android:layout_alignEnd="@+id/wins"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0/0"
        android:id="@+id/grands_txt"
        android:textSize="20dp"
        android:layout_alignTop="@+id/wins_txt"
        android:layout_alignLeft="@+id/grand"
        android:layout_alignStart="@+id/grand"
        android:layout_alignRight="@+id/grand"
        android:layout_alignEnd="@+id/grand"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0/0"
        android:id="@+id/tichus_txt"
        android:textSize="20dp"
        android:layout_alignTop="@+id/grands_txt"
        android:layout_alignRight="@+id/tichu"
        android:layout_alignEnd="@+id/tichu"
        android:layout_alignLeft="@+id/tichu"
        android:layout_alignStart="@+id/tichu"
        android:gravity="center" />

</RelativeLayout>
